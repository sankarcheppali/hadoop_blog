package net.icircuit.hadoop.HadoopCompression;

import org.apache.hadoop.conf.Configuration;
import org.apache.hadoop.io.compress.CompressionCodec;
import org.apache.hadoop.util.ReflectionUtils;

public class Compress {

	public static void main(String[] args) throws ClassNotFoundException{ //will take compression codec as argumnet
		Class<?> codeClass=Class.forName(args[0]);
		Configuration conf = new Configuration();
		CompressionCodec codec=ReflectionUtils.newInstance(codeClass, conf);
		
	}
}
